{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pyinstaller",
            "type": "shell",
            "group": "build",
            "linux": {
                "command": "source \"./.venv/bin/activate\" && pyinstaller \"./main.py\" --noconfirm --clean --onefile --name=\"Kudan\" --icon=\"./favicon.ico\" --add-data=\"./favicon.ico:./\" --add-data=\"./inter:./\" --windowed",
            },
            "windows": {
                "command": "source \"./.venv/Scripts/activate\" && pyinstaller \"./main.py\" --noconfirm --clean --onefile --name=\"Kudan\" --icon=\"./favicon.ico\" --add-data=\"./favicon.ico:./\" --add-data=\"./inter:./\" --windowed",
            },
        }
    ]
}